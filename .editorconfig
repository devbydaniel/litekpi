# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Frontend files (JS, TS, TSX, JSON, CSS, etc.)
[*.{js,jsx,ts,tsx,json,css,scss,html,vue,yaml,yml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# SQL
[*.sql]
indent_style = space
indent_size = 2
